---
interface Props {
	theme?: 'dark' | 'light';
}

const { theme = 'dark' } = Astro.props;

const isDark = theme === 'dark';
const bgColor = isDark ? 'bg-black' : 'bg-white';
const textColor = isDark ? 'text-white' : 'text-[#262626]';
const borderColor = isDark ? 'border-white' : 'border-[#262626]';
---

<header class={`${bgColor} w-full h-[78px] flex items-center justify-between px-8 border-b-2 ${borderColor}`}>
	<!-- Logo a la izquierda -->
	<div class="flex items-center">
		<a href="/" class="flex items-center">
			<img 
				src="/logo.svg" 
				alt="Miriam Laina" 
				class={`w-auto h-8 ${isDark ? 'brightness-0 invert' : ''}`}
			/>
		</a>
	</div>

	<!-- Separador vertical y navegación a la derecha -->
	<div class="flex items-center gap-8">
		<!-- Línea vertical separadora -->
		<div class={`h-full w-px ${isDark ? 'bg-white' : 'bg-[#262626]'}`}></div>
		
		<!-- Navegación -->
		<nav class="flex items-center gap-16 mr-16">
			<!-- Contenedor para Works con líneas decorativas -->
			<div class="flex items-center">
				<!-- Primera línea vertical -->
				<div class={`h-full w-[2px] ${isDark ? 'bg-white' : 'bg-[#262626]'}`}></div>
				<!-- Espaciado entre líneas (48px) -->
				<div class="w-12"></div>
				<!-- Segunda línea vertical -->
				<div class={`h-full w-[2px] ${isDark ? 'bg-white' : 'bg-[#262626]'}`}></div>
				<!-- Espaciado entre segunda línea y Works (64px) -->
				<div class="w-16"></div>
				<!-- Item Works -->
				<a href="/works" class={`${textColor} font-sans text-base hover:opacity-70 transition-opacity`}>
					Works
				</a>
			</div>
			<a href="/about" class={`${textColor} font-sans text-base hover:opacity-70 transition-opacity`}>
				About
			</a>
			<a href="/cv" class={`${textColor} font-sans text-base hover:opacity-70 transition-opacity`}>
				CV
			</a>
		</nav>
	</div>
</header>

