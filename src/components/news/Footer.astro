---
interface Props {
	theme?: 'dark' | 'light';
}

const { theme = 'dark' } = Astro.props;

const isDark = theme === 'dark';
const bgColor = isDark ? 'bg-secondary' : 'bg-white';
const textColor = isDark ? 'text-white' : 'text-secondary-500';
const textProduct = isDark ? 'text-secondary-200' : 'text-secondary-300';
const textCopyright = isDark ? 'text-secondary-100' : 'text-secondary-300';
const lineColor = isDark ? 'bg-white' : 'bg-secondary-500';

const currentYear = new Date().getFullYear();
---

<footer class={`${bgColor} w-full relative flex flex-col gap-8 pt-10 pb-6 border-t-2 border-white`}>
	<!-- Contenido principal -->
	<div class="px-16">
		<div class="flex flex-col gap-[156px]">
			<!-- Primer bloque: Tagline, LinkedIn y Product Designer -->
			<div class="flex flex-col gap-0">
				<!-- Tagline y LinkedIn -->
				<div class="flex justify-between items-start">
					<p class={`${textColor} text-sb1 font-body font-semibold`}>
						Designing digital things, enjoying analog life.
					</p>
					<!-- Icono LinkedIn -->
					<a 
						href="https://www.linkedin.com/in/miriam-laina-p%C3%A9rez-622956168/" 
						target="_blank" 
						class="hover:opacity-70 transition-opacity inline-block shrink-0"
						aria-label="LinkedIn"
					>
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" 
								fill={isDark ? '#ffffff' : '#0A0908'}/>
						</svg>
					</a>
				</div>
				<!-- Product Designer -->
				<p class={`${textProduct} text-body-md font-body font-bold`}>
					Product Designer
				</p>
			</div>

			<!-- Segundo bloque: Logo y Copyright -->
			<div class="flex flex-col gap-8">
				<!-- Logo -->
				<div class="h-[52px] w-[203px]">
					<img 
						src="/logo.svg" 
						alt="Miriam Laina" 
						class={`h-full w-auto ${isDark ? 'brightness-0 invert' : ''}`}
					/>
				</div>
				<!-- Copyright -->
				<p class={`${textCopyright} text-body-sm font-body`}>
					Miriam Laina Â© {currentYear}
				</p>
			</div>
		</div>
	</div>

	<!-- Dividers horizontales en la parte inferior -->
	<div class="flex flex-col gap-4">
		<!-- Primer divider horizontal -->
		<div class={`w-full h-[2px] ${lineColor}`}></div>
		<!-- Segundo divider horizontal -->
		<div class={`w-full h-[2px] ${lineColor}`}></div>
	</div>
</footer>

