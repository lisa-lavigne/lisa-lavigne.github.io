---
interface Props {
	theme?: 'dark' | 'light';
}

const { theme = 'dark' } = Astro.props;

const isDark = theme === 'dark';
const bgColor = isDark ? 'bg-secondary' : 'bg-white';
const textColor = isDark ? 'text-white' : 'text-secondary';
const textproduct = isDark ? 'text-secondary-200' : 'text-secondary-300';
const borderColor = isDark ? 'border-white' : 'border-secondary';

const currentYear = new Date().getFullYear();
---

<footer class={`${bgColor} w-full border-t-2 ${borderColor} relative`}>
	<div class="py-8">
		<div class="flex items-center">
			<!-- Sección izquierda: Textos y LinkedIn -->
			<div class="flex flex-col flex-1  px-16">
				<!-- Contenedor para "Living..." y LinkedIn -->
				<div class="flex justify-between items-center">
					<p class={`${textColor} text-sb1 font-body font-semibold mb-0`}>
						Designing digital things, enjoying analog life.
					</p>
					<!-- Icono LinkedIn -->
					<a 
						href="https://www.linkedin.com/in/miriam-laina-p%C3%A9rez-622956168/" 
						target="_blank" 
						class="hover:opacity-70 transition-opacity inline-block"
						aria-label="LinkedIn"
					>
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" 
								fill={isDark ? '#ffffff' : '#262626'}/>
						</svg>
					</a>
				</div>
				
				<!-- Textos restantes -->
				<div class="flex flex-col">
					<p class={`${textproduct} text-body-md font-body font-bold`}>
						Product Designer
					</p>
					<p class={`${textColor} text-sm mt-[156px] font-body`}>
						Miriam Laina © {currentYear}
					</p>
				</div>
			</div>

			<!-- Sección derecha: Logo -->
			<div class="flex items-center justify-center w-[382px] h-full">
				<img 
					src="/logo.svg" 
					alt="Miriam Laina" 
					class={`h-12 ${isDark ? 'brightness-0 invert' : ''}`}
				/>
			</div>
		</div>
	</div>

	<!-- Divider vertical de 2px que va desde el top hasta el primer divider horizontal -->
	<div 
		class={`absolute top-0 bottom-[calc(24px+16px+2px)] w-[2px] ${isDark ? 'bg-white' : 'bg-[#262626]'}`}
		style="right: 382px;"
	></div>

	<!-- Dividers horizontales en la parte inferior -->
	<div class="flex flex-col pb-6">
		<!-- Primer divider horizontal -->
		<div class={`w-full h-[2px] ${isDark ? 'bg-white' : 'bg-[#262626]'}`}></div>
		<!-- Espaciado de 16px entre dividers -->
		<div class="h-4"></div>
		<!-- Segundo divider horizontal -->
		<div class={`w-full h-[2px] ${isDark ? 'bg-white' : 'bg-[#262626]'}`}></div>
	</div>
</footer>

