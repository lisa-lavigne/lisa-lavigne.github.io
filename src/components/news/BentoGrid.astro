import { projects } from '../../data/projects';

// Mapeo de im√°genes a proyectos basado en los nombres de archivo
const imageToProjectMap: Record<string, string> = {
	'/images/bento/10.svg': 'roam-rider',
	'/images/bento/2.svg': 'cupra-seat',
	'/images/bento/5.svg': 'imagins-ai',
	'/images/bento/11.svg': 'roam-rider',
	'/images/bento/8.svg': 'movistar-prosegur-alarms',
	'/images/bento/1.svg': 'selectra',
	'/images/bento/13.svg': 'selectra',
	'/images/bento/3.svg': 'cupra-seat',
	'/images/bento/6.svg': 'imagins-ai',
	'/images/bento/12.svg': 'roam-rider',
	'/images/bento/4.svg': 'cupra-seat',
	'/images/bento/9.svg': 'movistar-prosegur-alarms',
};

function getProjectForImage(imageSrc: string) {
	const slug = imageToProjectMap[imageSrc];
	if (!slug) return null;
	return projects.find(p => p.slug === slug) || null;
}
