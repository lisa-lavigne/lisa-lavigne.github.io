---
interface Props {
	title: string;
	description: string;
	slug: string;
	isLast?: boolean;
}

const { title, description, slug, isLast = false } = Astro.props;
---

<a href={`/works/${slug}`} class={`flex flex-col gap-6 py-4 ${!isLast ? 'border-b-2 border-secondary-100' : ''} hover:opacity-90 transition-opacity`}>
	<div class="flex items-start justify-between gap-2">
		<div class="flex flex-col gap-3">
			<h3 class="text-sb1 font-body font-semibold text-secondary-100">{title}</h3>
			<p class="text-body-md font-body text-secondary-200">{description}</p>
		</div>
		<div class="w-8 h-8 flex-shrink-0">
			<svg class="w-full h-full text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
				<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5L19.5 4.5M19.5 4.5H9M19.5 4.5V15" />
			</svg>
		</div>
	</div>
</a>

