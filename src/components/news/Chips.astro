---
interface Props {
	variant?: 'outline' | 'filled';
	text?: string;
}

const { variant = 'outline', text = 'UX/UI' } = Astro.props;

const isOutline = variant === 'outline';
const borderColor = '#7F7FFF';
const bgColor = '#D8D8FF';
---

<span 
	class={`inline-block rounded-lg text-center font-sans font-medium ${
		isOutline 
			? 'border-2 bg-transparent' 
			: 'bg-[#D8D8FF] border-0'
	}`}
	style={isOutline 
		? `border-color: ${borderColor}; color: ${borderColor}; padding: 8px; border-radius: 8px;`
		: `background-color: ${bgColor}; color: black; padding: 8px; border-radius: 8px;`
	}
>
	{text}
</span>

