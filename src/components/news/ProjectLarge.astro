---
import Chips from './Chips.astro';

interface Props {
	imageSrc: string;
	category: string;
	title: string;
	description: string;
	tags: string[];
	slug: string;
}

const { imageSrc, category, title, description, tags, slug } = Astro.props;
---

<a href={`/works/${slug}`} class="flex items-center justify-between h-[445px] w-full hover:opacity-90 transition-opacity">
	<!-- Imagen a la izquierda -->
	<div class="w-[512px] h-full flex-shrink-0">
		<img 
			src={imageSrc} 
			alt={title} 
			class="w-full h-full object-cover"
		/>
	</div>
	
	<!-- Separador vertical decorativo -->
	<div class="h-full w-[2px] bg-secondary flex-shrink-0"></div>
	
	<!-- Contenido a la derecha -->
	<div class="flex-1 flex flex-col justify-between h-full px-6 py-10">
		<div class="flex flex-col gap-6 w-full">
			<!-- Título con categoría y flecha -->
			<div class="flex items-start justify-between gap-4">
				<div class="flex flex-col gap-2">
					<h3 class="text-sb1 font-body font-semibold text-secondary-200">{category}</h3>
					<h3 class="text-h4 font-heading font-bold text-secondary-400">{title}</h3>
				</div>
				<!-- Ícono de flecha en esquina superior derecha (arrow-up-right) -->
				<div class="w-12 h-12 flex-shrink-0">
					<svg class="w-full h-full text-secondary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5L19.5 4.5M19.5 4.5H9M19.5 4.5V15" />
					</svg>
				</div>
			</div>
			
			<!-- Descripción -->
			<p class="text-body-md font-body text-secondary-300">
				{description}
			</p>
		</div>
		
		<!-- Tags/Chips -->
		<div class="flex flex-wrap gap-3 max-w-[600px]">
			{tags.map((tag) => (
				<Chips variant="outline" text={tag} />
			))}
		</div>
	</div>
</a>

