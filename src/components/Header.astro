---
interface Props {
	dark?: boolean;
}

const { dark = false } = Astro.props;
const bgColor = dark ? 'bg-secondary' : 'bg-primary';
const borderColor = dark ? 'border-primary' : 'border-secondary';
const textColor = dark ? 'text-primary' : 'text-secondary';
---

<header class={`${bgColor} border-b-2 ${borderColor} h-[78px] flex items-center justify-between px-0`}>
	<div class="h-full flex items-center">
		<div class={`h-full w-[48px] border-r-2 ${borderColor} flex items-center justify-center`}>
			<span class={`${textColor} font-sans font-bold text-xl`}>iC</span>
		</div>
	</div>
	<nav class="h-full flex items-center gap-8 px-8">
		<a href="/works" class={`${textColor} font-sans text-body-md hover:opacity-70 transition-opacity`}>Works</a>
		<a href="/about" class={`${textColor} font-sans text-body-md hover:opacity-70 transition-opacity`}>About</a>
		<a href="/cv" class={`${textColor} font-sans text-body-md hover:opacity-70 transition-opacity`}>CV</a>
	</nav>
</header>
