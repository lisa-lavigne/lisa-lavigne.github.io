---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import NewsHeader from '../components/news/Header.astro';
import NewsButton from '../components/news/Button.astro';
import NewsChips from '../components/news/Chips.astro';
import NewsCard from '../components/news/DataItem.astro';
import Footer from '../components/Footer.astro';
import NewsFooter from '../components/news/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-primary min-h-screen flex flex-col">
		<!-- Noise overlay que estÃ¡ por encima de todo -->
		<!--<div class="noise-overlay"></div> -->
		<!-- Header con tema dark -->
		<NewsHeader theme="dark" />
		<!-- Header con tema light (para comparar) -->
		<NewsHeader theme="light" />
		<main class="w-full flex items-center justify-center px-0">
			<section class="w-full flex flex-col gap-y-3 items-center">
				<h2 class="md:text-5xl text-3xl font-sans text-accent text-center">hey!</h2>
				<h1 class=" md:text-6xl text-[40px] font-heading text-accent text-center">i'm cooking up something new</h1>
				<div class="w-full md:max-w-4xl">
					<p class="text-accent md:text-lg text-base font-sans text-center">I'm designing my new portfolio and, like any good design, it takes time (and plenty of coffee).</p>
					<p class="text-accent md:text-lg text-base font-sans text-center">Soon you'll be able to see my projects here, but in the meantime, <strong>feel free to connect with me on 
						<a href="https://www.linkedin.com/in/miriam-laina-p%C3%A9rez-622956168/" target="_blank" class="text-neutral-300 hover:text-primary-300">LinkedIn</a>
					or just imagine this site is already amazing.</strong></p>
				</div>
				<img src="/logo.svg" alt="Miriam Laina" class="w-[140px] text-accent mt-[120px]" />
				<NewsButton href="/about" text="Read about me" />
				<div class="flex flex-col gap-4 mt-8">
					<NewsChips variant="outline" text="UX/UI" />
					<NewsChips variant="filled" text="UX/UI" />
				</div>
				<div class="flex flex-col gap-4 mt-8">
					<NewsCard variant="text" cardStyle="filled" title="Security" value="50%" />
					<NewsCard variant="icon" cardStyle="filled" title="Security" />
				</div>
				<div class="flex flex-col gap-4 mt-8">
					<NewsCard variant="text" cardStyle="outline" title="Security" value="50%" />
					<NewsCard variant="icon" cardStyle="outline" title="Security" />
				</div>
			</section>
		</main>
		<!-- Footer con tema dark -->
		<NewsFooter theme="dark" />
		<!-- Footer con tema light (para comparar) -->
		<NewsFooter theme="light" />
	</body>
</html>
