---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/news/Header.astro';
import Footer from '../components/news/Footer.astro';
import Cards from '../components/news/Cards.astro';
import ProjectItem from '../components/news/ProjectItem.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { projects } from '../data/projects';

const mainProjects = projects.filter(p => !p.isSideProject);
const sideProjects = projects.filter(p => p.isSideProject);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} - Works`} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-secondary min-h-screen flex flex-col">
		<Header theme="dark" />
		
		<main class="w-full flex flex-col">
			<!-- Hero Section -->
			<section class="w-full relative min-h-[605px] flex items-center px-16 py-20">
				<div class="absolute left-0 top-[92px] w-[420px] h-[420px] flex-shrink-0">
					<img src="/n.svg" alt="Image Grid" class="w-full h-full object-cover" />
				</div>
				<div class="flex flex-col gap-4 max-w-[477px] ml-auto">
					<h1 class="text-h1 font-heading font-bold text-primary capitalize">Works</h1>
					<div class="px-4">
						<p class="text-body-md font-body text-primary">
							Design isn't what I make.<br/>
							It's how I think, how I solve, and how I care.<br/>
							These are the outcomes of that mindset in action.
						</p>
					</div>
				</div>
			</section>

			<!-- In-house & client projects Section -->
			<section class="w-full border-t-2 border-b-2 border-primary px-16 py-[120px] flex flex-col gap-10">
				<div class="flex flex-col gap-3 mb-10">
					<h2 class="text-h2 font-heading font-bold text-primary">In-house & client projects</h2>
				</div>
				
				<div class="flex flex-col gap-0 max-w-[1152px]">
					{mainProjects.map((project, index) => (
						<>
							<ProjectItem 
								category={project.industry || ''}
								tags={project.tags || []}
								title={project.title}
								description={project.description.split('\n')[0]}
								slug={project.slug}
							/>
							{index < mainProjects.length - 1 && <div class="h-px bg-primary w-full"></div>}
						</>
					))}
				</div>
			</section>

			<!-- Side Projects Section -->
			<section class="w-full bg-primary px-14 py-[120px] flex flex-col gap-14">
				<h2 class="text-h2 font-heading font-bold text-secondary text-center">Side projects</h2>
				
				<div class="flex flex-col gap-14 items-center">
					{sideProjects.map((project) => (
						<div class="w-full max-w-[1062px]">
							<Cards 
								imageSrc={project.heroImage || ''}
								title={project.title}
								description={project.description.split('\n')[0]}
								slug={project.slug}
							/>
						</div>
					))}
				</div>
			</section>

			<!-- Gallery Section: Interiorism -->
			<section class="w-full bg-primary border-t-2 border-b-2 border-secondary">
				<div class="px-16 py-0 flex items-center justify-end">
					<div class="flex items-center justify-between w-[635px] py-0">
						<h2 class="text-h2 font-heading font-bold text-secondary text-right">Interiorism</h2>
						<div class="w-6 h-[153px] flex-shrink-0"></div>
					</div>
				</div>
				<div class="w-full overflow-x-auto">
					<div class="flex h-[376px] items-center">
						<div class="w-[382px] h-full flex-shrink-0 bg-secondary-100 border-r-2 border-secondary"></div>
						<div class="w-[382px] h-full flex-shrink-0 bg-secondary-100 border-r-2 border-secondary"></div>
						<div class="w-[382px] h-full flex-shrink-0 bg-secondary-100 border-r-2 border-secondary"></div>
						<div class="w-[382px] h-full flex-shrink-0 bg-secondary-100"></div>
					</div>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>

